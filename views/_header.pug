header.header
  nav.nav.nav--tours
    a.nav__el(href='/') 旅程总览
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav.nav--user
    if user
      a.nav__el.nav__el--logout 注销
      a.nav__el(href='/me')
        img.nav__user-img(src=`/img/users/${user.photo}` alt=`Photo of ${user.name}`)
        span= user.name.split(' ')[0]
    else
      a.nav__el(href='/login') 登录
      a.nav__el.nav__el--cta(href='/signup') 注册